<section id="error-page">
    <div class="container clearfix">
      <div class="ltcol">
        &nbsp;
      </div>

      <div class="ctcol">
        <div class="box partial rounded no-margin">
          <div class="box-header container clearfix">
            <span class="icon-bug f-left">Fehler</span>
          </div>

          <div class="box-section box-footer">
            <div class="container clearfix">
              {% if message is defined %}
              <p>
                {$ message $}
              </p>
              {% else %}
              <p>
                {$ 'subscription_warning' | trans $}
              </p>
              {% endif %}
            </div>
          </div>

        </div>

      </div>

      <div class="rtcol">
        <div class="icon-hand-right _icon-list-item last">
          <h2>{$ 'donation_title' | trans $}</h2>
          <p>
            <a href="{$ path( '/' ) $}" target="_blank">{$ 'back_to_donation' | trans $}</a>
          </p>
        </div>
      </div>
    </div>
  </section>
