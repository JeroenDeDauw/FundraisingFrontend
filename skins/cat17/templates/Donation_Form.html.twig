{% extends 'Base_Layout.html.twig' %}

{% set COUNTRIES = [ 'DE', 'AT', 'CH', 'BE', 'IT', 'LI', 'LU' ] %}

{% block page_identifier %}donation{% endblock %}

{% block main %}
	<div class="introduction container default">
		<div class="row">
			<div class="col-xs-12">
				<!-- ToDo: wikimedia-team add h2 adequate title in deutch, this title is only visible to screenreaders and robots -->
				<h2 class="sr-only">Donation wikimedia page</h2>
				<p class="h1">Die Wikimedia Fördergesellschaft ist eine unabhängige gemeinnützige Organisation, die in Deutschland Spenden für <a class="link" href="https://de.wikipedia.org/wiki/Wikipedia:Hauptseite">Wikipedia</a> und die anderen Wikimedia-Projekte sammelt.</p>
				<a href="#donation-amount" class="btn btn-donation btn-introduction bk-blue text-center text-uppercase">Jetzt spendenn</a>
			</div>
		</div>
	</div>

	<div class="introduction banner container hidden">
		<div class="row">
			<div class="col-xs-12 col-md-8">
				<p class="h1">
					Sie wollen
					<span class="frequency"><span class="text strong"></span></span>
					<span class="amount"><span class="text strong" data-display-error="false"></span></span> per
					<span class="payment-method"><span class="text strong"></span></span>
					spenden.
				</p>
				<p class="subtitle">Die Wikimedia Fördergesellschaft ist eine unabhängige gemeinnützige Organisation, die in Deutschland Spenden für Wikipedia und die anderen Wikimedia-Projekte sammelt.</p>
			</div>
			<div class="link-back col-xs-12 col-sm-5 col-sm-offset-7 col-md-offset-0 col-md-4">
				<a href="{$ path( '/' ) $}" class="">Das stimmt nicht? Hier können<br> Sie Ihre Angaben ändern.</a>
			</div>
		</div>
	</div>

	<form id="form-donation" action="{$ basepath $}/donation/add" method="post" novalidate>
		<div class="container">
			<section class="state-bar state-overview col-xs-12 ">
				<div class="wrap-bar container ">
					<ul class="">
						<li class="amount">
							<a href="#donation-amount">
								<span class="text" data-display-error="false">Betrag</span>
								<i class="periodicity-icon" data-display-error="false"></i>
							</a>
						</li>
						<li class="payment-method">
							<a href="#donation-payment">
								<span class="text" data-display-error="false">Zahlart</span>
								<i class="payment-icon" data-display-error="false"></i>
							</a>
						</li>
						<li class="donator-type">
							<a href="#donation-type">
								<span class="text" data-display-error="false">Daten</span>
								<i class="address-icon" data-display-error="false"></i>
							</a>
						</li>
					</ul>
				</div>
			</section>
			<div class="row">

				<div class="form-shadow-wrap col-xs-12 col-sm-8">
					<section id="donation-amount" class="donation-amount clearfix">
						<h2 class="">Spendentbetrag</h2>

						<p class="legend">Wie viel Geld wollen Sie spenden und wie häufig?</p>

						<fieldset
								class="amount-qty padding-right-4 col-xs-12 col-sm-8 col-sm-offset-right-4 col-md-6 col-md-offset-right-7 no-gutter-left">
							<legend class="sr-only">Wie viel Geld wollen Sie spenden und wie häufig?</legend>
							<div class="wrap-amounts">
								{% include 'partials/payment_preset_amounts.html.twig' with { 'presetAmounts': [ 5, 15, 25, 50, 75, 100, 250, 300 ] } %}

								<div class="wrap-amount-typed">
									<input type="text" name="amount-typed" id="amount-typed">
								</div>
								<input type="hidden" name="amount-hidden" id="amount-hidden">
								<!-- Todo: wikimedia-team add messages in deutch -->
								<label for="amount-typed" class="sr-only">Give your desired amount</label>
							</div>
						</fieldset>

						<fieldset id="recurrence"
								  class="show-info padding-right-4 col-xs-12 col-sm-8 col-sm-offset-right-4 col-md-6 col-md-offset-right-7 no-gutter-left">
							<!-- ToDo: wikimeida-team - translate text to deutsch -->
							<legend class="sr-only">Choose temporality of payment</legend>

							{% include 'partials/payment_intervals.html.twig' only %}
						</fieldset>
					</section>

					<section id="donation-payment" class="donation-payment-method clearfix">
						<h2>Zahlart</h2>

						<p class="legend">Wie möchten Sie Ihre Spende bezahlen?</p>

						<fieldset id="payment-method"
								  class="show-info padding-right-4 col-xs-12 col-sm-8 col-sm-offset-right-4 col-md-6 col-md-offset-right-7 no-gutter-left">
							<legend class="sr-only">Wie möchten Sie Ihre Spende bezahlen?</legend>

							{% include 'partials/payment_types.html.twig' with { 'paymentTypes': paymentTypes } only %}
						</fieldset>
					</section>

					<section id="donation-type" class="donation-daten clearfix">
						<h2>Daten</h2>

						<p class="legend">Wollen Sie als Privatperson oder als Firma spenden? Sie können auch ohne Angabe
							Ihrer Adresse spenden.
						</p>

						<fieldset id="type-donator"
								  class="show-info padding-right-4 col-xs-12 col-sm-8 col-sm-offset-right-4 col-md-6 col-md-offset-right-7 no-gutter-left">
							<legend class="sr-only">
								Wollen Sie als Privatperson oder als Firma spenden? Sie können auch ohne
								Angabe Ihrer Adresse spenden.
							</legend>

							<div class="wrap-field personal">

								<div class="wrap-input">
									<input type="radio" name="addressType" id="personal" value="person">
									<label for="personal"><span>Privat</span><i class="icon-account_circle"></i></label>
								</div>
								<div class="wrap-info">
									<div class="info-text" data-info="personal">
										<div class="wrap-select-50 clearfix">
											<select class="no-outline salutation" id="salutation" name="salutation"
													data-jcf='{"wrapNative": false,  "wrapNativeOnMobile": true  }'>
												<option hidden class="hideme" value="">{$ 'salutation_label' | trans $}</option>
												<option value="Herr">{$ 'salutation_option_mr' | trans $}</option>
												<option value="Frau">{$ 'salutation_option_mrs' | trans $}</option>
											</select>
											<select class="no-outline personal-title" id="title" name="title"
													data-jcf='{"wrapNative": false, "wrapNativeOnMobile": true}'>
												<option value="">{$ 'title_option_none' | trans $}</option>
												<option value="Dr.">Dr.</option>
												<option value="Prof.">Prof.</option>
												<option value="Prof. Dr.">Prof. Dr.</option>
											</select>
										</div>

										<div class="field-grp valid">
											<input type="text" id="first-name" name="firstName" placeholder="{$ 'firstname_label' | trans $}">
											<label for="first-name" class="sr-only">{$ 'firstname_label' | trans $}</label>
											<span class="error-text">Es ist nicht eine gültige E-Mail.</span>
										</div>
										<div class="field-grp">
											<input type="text" id="last-name" name="lastName" placeholder="{$ 'lastname_label' | trans $}">
											<label for="last-name" class="sr-only">{$ 'lastname_label' | trans $}</label>
											<span class="error-text">Es ist nicht eine gültige E-Mail.</span>
										</div>
										<div class="field-grp">
											<input type="email" id="email" placeholder="{$ 'email_label' | trans $}">
											<label for="email" class="sr-only">{$ 'email_label' | trans $}</label>
											<span class="error-text">Es ist nicht eine gültige E-Mail.</span>
										</div>
										<div class="field-grp">
											<input type="text" id="street" placeholder="{$ 'street_label' | trans $}">
											<label for="street" class="sr-only">{$ 'street_label' | trans $}</label>
											<span class="error-text">Es ist nicht eine gültige E-Mail.</span>
										</div>
										<div class="field-grp">
											<input type="text" id="post-code" placeholder="{$ 'zip_label' | trans $}">
											<label for="post-code" class="sr-only">{$ 'zip_label' | trans $}</label>
											<span class="error-text">Es ist nicht eine gültige E-Mail.</span>
										</div>
										<div class="field-grp">
											<input type="text" id="city" placeholder="{$ 'city_label' | trans $}">
											<label for="city" class="sr-only">{$ 'city_label' | trans $}</label>
											<span class="error-text">Es ist nicht eine gültige E-Mail.</span>
										</div>

										<select id="country"
											data-jcf='{"wrapNative": false, "wrapNativeOnMobile": true, "flipDropToFit": true,  "maxVisibleItems": 6}'
											class="no-outline country-select">
											{% for countryCode in COUNTRIES %}
												<option value="{$ countryCode $}">{$ ( 'country_option_' ~ countryCode ) | trans $}</option>
											{% endfor %}
										</select>
									</div>
									<div class="wrap-check">
										<input type="checkbox" id="newsletter" data-jcf='{"wrapNative": true}' class="jcf">
										<label class="news" for="newsletter">
											Ja, ich bin damit einverstanden, dass Wikimedia mich per E-Mail kontaktiert,
											wenn Wikipedia
											meine Unterstützung benötigt.<br>
											Die Einwilligung können Sie jederzeit per
											E-Mail an spenden@wikimedia.de mit Wirkung für die Zukunft widerrufen.
										</label>
									</div>
								</div>
							</div>
							<div class="wrap-field firma">
								<div class="wrap-input">
									<input type="radio" name="addressType" id="company" value="firma">
									<label for="company"><span>Firma</span><i class="icon-work"></i></label>
								</div>
								<div class="wrap-info">
									<div class="info-text" data-info="company">
										<div class="field-grp ">
											<input type="text" id="company-name" name="companyName" placeholder="{$ 'companyname_label' | trans $}">
											<label for="company-name" class="sr-only">{$ 'companyname_label' | trans $}</label>
											<span class="error-text">Es ist nicht eine gültige E-Mail.</span>
										</div>
										<div class="field-grp">
											<input type="email" id="email-company" name="email" placeholder="{$ 'email_label' | trans $}">
											<label for="email-company" class="sr-only">{$ 'email_label' | trans $}</label>
											<span class="error-text">Es ist nicht eine gültige E-Mail.</span>
										</div>
										<div class="field-grp">
											<input type="text" id="adress-company" name="street" placeholder="{$ 'street_label' | trans $}">
											<label for="adress-company" class="sr-only">{$ 'street_label' | trans $}</label>
											<span class="error-text">Es ist nicht eine gültige E-Mail.</span>
										</div>
										<div class="field-grp">
											<input type="text" id="post-code-company" name="postcode" placeholder="{$ 'zip_label' | trans $}">
											<label for="post-code" class="sr-only">{$ 'zip_label' | trans $}</label>
											<span class="error-text">Es ist nicht eine gültige E-Mail.</span>
										</div>
										<div class="field-grp">
											<input type="text" id="city-company" name="city" placeholder="{$ 'city_label' | trans $}">
											<label for="city-company" class="sr-only">{$ 'city_label' | trans $}</label>
											<span class="error-text">Es ist nicht eine gültige E-Mail.</span>
										</div>

										<select id="country-company" name="country"
											data-jcf='{"wrapNative": false, "wrapNativeOnMobile": true,  "maxVisibleItems": 6}'
											class="no-outline country-select">
											{% for countryCode in COUNTRIES %}
												<option value="{$ countryCode $}">{$ ( 'country_option_' ~ countryCode ) | trans $}</option>
											{% endfor %}
										</select>
									</div>
									<div class="wrap-check">
										<input type="checkbox" id="newsletter-company">
										<label class="news" for="newsletter-company">
											Ja, ich bin damit einverstanden, dass Wikimedia mich per E-Mail kontaktiert,
											wenn Wikipedia
											meine Unterstützung benötigt.
											Die Einwilligung können Sie jederzeit per
											E-Mail an spenden@wikimedia.de mit Wirkung für die Zukunft widerrufen.
										</label>
									</div>
								</div>

							</div>


							<div class="wrap-field anonym">

								<div class="wrap-input">
									<input type="radio" name="addressType" id="anonymus" value="anonym">
									<label for="anonymus"><span>Anonym</span><i class="icon-visibility_off"></i></label>
								</div>
								<p class="info-text" data-info="anonymus">
									Bitte beachten Sie, dass wir für eine spätere Zuordnung der Spende Ihren Namen und die
									Zahlungsinformationen vom Dienstleister erhalten.
								</p>
							</div>

						</fieldset>
					</section>

				</div>

				{% include 'partials/donation/state_bar.html.twig' %}

			</div>
		</div>
		<hr id="form-end">

		{% include 'partials/donation/overview.html.twig' %}

		<div class="fixed-button hidden-lg">
			<div class="switch-container container-fluid container">
				<div class="row">
					<div class=" col-sm-5 col-sm-offset-7 col-md-4 col-md-offset-8 clearfix">
						<input type="submit" value="Spende abschließen" class="btn btn-donation btn-unactive">
					</div>
				</div>
			</div>
		</div>

		<div id="submit-bottom">
			<input type="submit" value="Spende abschließen" class="btn btn-donation btn-unactive visible-xs-block">
		</div>

	</form>

{% endblock %}

{% block scripts %}
	<script type="text/javascript" src="{$ basepath|e('html_attr') $}{$ '/skins/cat17/build/wmde.js'|prefix_file $}"></script>
	<script type="text/javascript" id="init-form" src="{$ basepath|e('html_attr') $}{$ '/skins/cat17/scripts/donationForm.js'|prefix_file $}"
			data-initial-form-values="{% if initialFormValues %}{$ initialFormValues|json_encode|e('html_attr') $}{% else %}{}{% endif %}"
			data-violated-fields="{% if violatedFields %}{$ violatedFields|json_encode|e('html_attr') $}{% else %}{}{% endif %}"
			data-initial-validation-result="{% if validationResult %}{$ validationResult|json_encode|e('html_attr') $}{% else %}{}{% endif %}"
			data-validate-amount-url="{$ basepath|e('html_attr') $}/validate-payment-data"
			data-validate-address-url="{$ basepath|e('html_attr') $}/validate-address"
			data-validate-email-address-url="{$ basepath|e('html_attr') $}/validate-email"
			data-validate-iban-url="{$ basepath|e('html_attr') $}/check-iban"
			data-generate-iban-url="{$ basepath|e('html_attr') $}/generate-iban"
	></script>
{% endblock %}
